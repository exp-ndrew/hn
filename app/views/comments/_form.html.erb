<%= render('layouts/errors', :object => @comment) %>

<%= form_for([@article, @comment]) do |f| %>

    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_field :text, :class => "form-control" %>
      <%= hidden_field_tag "user_id", current_user.id %>
    </div>
    <%= f.submit(:class => "btn btn-primary") %>
<% end %>
